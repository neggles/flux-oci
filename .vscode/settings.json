{
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",

    "yaml.completion": true,
    "yaml.schemaStore.enable": true,
    "yaml.schemaStore.url": "https://www.schemastore.org/api/json/catalog.json",

    "[yaml]": {
        "editor.tabSize": 2
    },

    "files.associations": {
        ".sourceignore": "ignore"
    },

    "material-icon-theme.folders.associations": {
        "bootstrap": "global",
        "flux-system": "ci",
        "gitrepositories": "git",
        "helmrepositories": "packages",
        "kustomizations": "kubernetes",
        "namespaces": "context",
        "notifications": "messages",

        "cluster": "kubernetes",
        "cert-manager": "secure",
        "external-dns": "environment",
        "reflector": "middleware",
        "sealed-secrets": "keys",
        "traefik": "routes",
        "topolvm-system": "server",

        "common": "base",

        "services": "app"
    }
}
